<div class="cards">
  <% @posts.each do |post| %>
    <div id="delete-item-wrapper">
      <div id="delete-item">
        <%= link_to mypage_post_path(post),
            data: {turbo_method: :delete, turbo_confirm: "Delete this post?"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
      <%= link_to post_path(post), class:"text-decoration-none text-black" do %>
        <div class="card-post">
          <% if post.photos.attached? %>
            <img src="<%= cl_image_path(post.photos.first.key)%>", class="first-img" >
          <% else %>
            <%= image_tag "example.png", class:"first-img" %>
          <% end %>
          <div class="card-post-info">
            <h3 class="mb-2"><%= post.title %></h3>
            <div class="user-info">
              <%= image_tag post.user.avatar, class:"avatar-post me-2" %>
              <p><%= post.user.name %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
