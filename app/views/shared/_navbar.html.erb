<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand ms-2" do %>
      <%= image_tag "site-logo.png" %>
    <% end %>
    <%= render "shared/searchbox" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active me-3">
            <a href="#"><i class="fa-regular fa-bell" style="font-size: 22px;"></i></a>
          </li>
          <li class="nav-item dropdown me-3">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag current_user.avatar, class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "自分の投稿", "/mypage/posts", class: "dropdown-item" %>
              <%= link_to "お気に入り", "#", class: "dropdown-item" %>
              <%= link_to "マイページ", "#", class: "dropdown-item" %>
              <hr width="100%" class="text-center">
              <%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to "投稿 📝", new_post_path , class:"btn btn-info me-2" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
